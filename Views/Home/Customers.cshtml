@using C_Sharp_ECommerce.Models;
@model Customer;

<div class="row">
    <div class="col-sm-8">
        <form asp-action="CreateCustomer" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="valid" asp-validation-for="Name"></span>
            </div>
            
            <button type="submit" class="btn btn-info">Add</button>
            <br>
        </form>
        <br>
        <br>
        <form action="customer/search" method="post">
            <div class="form-group">
                <label name="Name">Search Customer by Name:</label>
                <input type="text" class="form-control" name="Name">
                <span class="valid" name="Name"></span>
            </div>
            
            <button type="submit" class="btn btn-info">Search</button>
            <br>
        </form>
        <br>
        <br>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="myTable" style="overflow-y:auto;">
                @foreach(var cust in @ViewBag.AllCustomers)
                    {
                    <tr>
                        <th>@cust.Name</th>
                        <th>@cust.CreatedAt</th>
                        <th>
                            <a asp-action="CustDelete" asp-controller="Home" asp-route-CustomerId="@cust.CustomerId">Remove</a>
                        </th>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
