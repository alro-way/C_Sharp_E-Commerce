@using C_Sharp_ECommerce.Models;
@model Product;

<div class="row">
    <div class="col-sm-3">
        <form action="/product/search" method="post">
            <div class="form-group">
                <label name="ProductName">Search Product by Name:</label>
                <input type="text" class="form-control" name="ProductName">
                <span class="valid" name="ProductName"></span>
            </div>
            
            <button type="submit" class="btn btn-info">Search</button>
            <br>
        </form>

        <br>
        <br>

        <form asp-action="CreateProduct" asp-controller="Home" method="post">
            <div class="form-group">
                <h4>Create a new Product</h4>
                <label asp-for="ProductName">Name:</label>
                <input type="text" class="form-control" asp-for="ProductName">
                <span class="valid" asp-validation-for="ProductName"></span>

                <label asp-for="Img">Image (url):</label>
                <input type="text" class="form-control" asp-for="Img" placeholder="http://">
                <span class="valid" asp-validation-for="Img"></span>

                <label asp-for="Desc">Description:</label>
                <textarea rows="5" class="form-control" asp-for="Desc"></textarea>
                <span class="valid" asp-validation-for="Desc"></span>

                <label asp-for="Quant">Initial Quantity:</label>
                <input type="number" min="1" class="form-control" asp-for="Quant">
                <span class="valid" asp-validation-for="Quant"></span>


            </div>
            
            <button type="submit" class="btn btn-info">Add Product</button>
            <br>
        </form>
        <br>
        <br>
    </div>
        
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-2">.col-sm-2</div>
            <div class="col-sm-2">.col-sm-2</div>
            <div class="col-sm-2">.col-sm-2</div>
            <div class="col-sm-2">.col-sm-2</div>
            <div class="col-sm-2">.col-sm-2</div>
            <div class="col-sm-2">.col-sm-2</div>
            <br>
            <br>
            @foreach(var prod in ViewBag.AllProducts)
            {
                <br>
                <div class="col-sm-3">
                    <img width="80%" class="prodImg" src="@prod.Img" alt="Here should be picture of @prod.ProductName">
                    <a href="/product/@prod.ProductId">
                        <h6>@prod.ProductName</h6>
                    </a>
                    <p>(@prod.Quant left)</p>
                    <a asp-action="DeleteProduct" asp-controller="Home" asp-route-ProductId="@prod.ProductId">Delete</a>
                    <br>
                    <br>
                    <br>
                </div>
                <br>
            }
            

        </div>
        
    </div>
</div>
